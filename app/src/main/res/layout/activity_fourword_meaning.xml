<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/sv_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_number">

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ScrollView>


    <TextView
        android:id="@+id/tv_char_a"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:text="粋"
        android:textSize="48sp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_char_b"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/border"
        app:layout_constraintTop_toBottomOf="@+id/tv_answer" />

    <TextView
        android:id="@+id/tv_char_b"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="粋"
        android:gravity="center"
        android:textSize="48sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_char_c"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_char_a"
        android:background="@drawable/border"
        app:layout_constraintTop_toTopOf="@+id/tv_char_a" />

    <TextView
        android:id="@+id/tv_char_c"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="粋"
        android:gravity="center"
        android:textSize="48sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_char_d"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_char_b"
        android:background="@drawable/border"
        app:layout_constraintTop_toTopOf="@+id/tv_char_a" />

    <TextView
        android:id="@+id/tv_char_d"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="粋"
        android:gravity="center"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_char_c"
        android:background="@drawable/border"
        app:layout_constraintTop_toTopOf="@+id/tv_char_a" />

    <TextView
        android:id="@+id/tv_answer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="32dp"
        android:text="意気揚々"
        android:gravity="center"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:letterSpacing="0.5"
        android:background="@drawable/border"
        app:layout_constraintTop_toBottomOf="@+id/tv_yomi" />
    <TextView
        android:id="@+id/tv_yomi"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="32dp"
        android:gravity="center"
        android:text="いきようよう"
        android:letterSpacing="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sv_question" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="2/200"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_acc"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="正答率｛｝%"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/tv_number"
        app:layout_constraintTop_toTopOf="@+id/tv_number" />

    <TextView
        android:id="@+id/tv_combo"
        android:layout_width="80dp"
        android:layout_height="16dp"
        android:layout_marginLeft="32dp"
        android:text="連続正解数:4"
        app:layout_constraintStart_toEndOf="@+id/tv_acc"
        app:layout_constraintTop_toTopOf="@+id/tv_number" />

    <Button
        android:id="@+id/bt_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="次へ"
        android:gravity="center"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>